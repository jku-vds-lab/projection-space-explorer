{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist/",
    "noImplicitAny": false,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2021",
    "jsx": "react",
    "lib": ["ESNext","DOM"],
    "declaration": true,
    "sourceMap": true,
    "preserveSymlinks": true,
    "declarationDir": "dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*"
  ]
}